  <body>
    <div class="wrapper">
      <div class="container">
        <header>
          <div class="sign-on">
            <% if Helper.is_logged_in?(session) %>
              <a href="/logout">Logout</a>
            <% else %>
              <a href="/signup">Sign up</a>
              |
              <a href="/login">Log In</a>
            <% end %>
          </div>
          <a href="/"><img src="images/logo-small.ico" class="img-responsive main-image"></a>
        </header>


      </div>
        <%= yield %>

      <footer class="branding">
        <small>&copy; 2021 <strong>LiveChat</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
